@page
@model FitnessCenter.Pages.Instructors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: #1c1c1c;
        color: #f4f4f4;
        font-family: 'Arial', sans-serif;
    }

    .hero {
        text-align: center;
        padding: 80px 20px;
        background: linear-gradient(120deg, #1c1c1c 50%, #333333 50%);
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        color: #ffffff;
    }

        .hero h1 {
            font-size: 3.5rem;
            color: #ff6600;
            text-transform: uppercase;
            font-weight: bold;
        }

        .hero p {
            font-size: 1.2rem;
            margin-top: 20px;
            color: #dcdcdc;
        }

    .cta-button {
        margin-top: 30px;
        padding: 10px 30px;
        background-color: #ff6600;
        color: #ffffff;
        text-transform: uppercase;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

        .cta-button:hover {
            background-color: #e55500;
        }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #333;
            color: #ff6600;
        }

        .table td {
            background-color: #444;
            color: #f4f4f4;
        }

        .table a {
            color: #ff6600;
            text-decoration: none;
        }

            .table a:hover {
                color: #e55500;
            }
</style>

<div class="hero">
    <h1>Instructors</h1>
    <p>Explore our certified trainers who will help you achieve your fitness goals.</p>
    <a href="/Instructors/Create" class="cta-button">Create New Instructor</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].Specialization)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Instructor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialization)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.InstructorId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.InstructorId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.InstructorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

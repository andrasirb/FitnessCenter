@page
@model FitnessCenter.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ReservationId" />
            <div class="form-group">
                <label asp-for="Reservation.MemberId" class="control-label"></label>
                <select asp-for="Reservation.MemberId" class="form-control" asp-items="ViewBag.MemberId"></select>
                <span asp-validation-for="Reservation.MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.WorkoutId" class="control-label"></label>
                <select asp-for="Reservation.WorkoutId" class="form-control" asp-items="ViewBag.WorkoutId"></select>
                <span asp-validation-for="Reservation.WorkoutId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ReservationTime" class="control-label"></label>
                <input asp-for="Reservation.ReservationTime" class="form-control" />
                <span asp-validation-for="Reservation.ReservationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {

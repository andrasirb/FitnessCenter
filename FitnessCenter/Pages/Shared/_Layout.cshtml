<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessCenter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessCenter.styles.css" asp-append-version="true" />
    <style>
        nav {
            background-color: #2c2f33;
        }

            nav .navbar-nav .nav-item .nav-link {
                color: #ff6600 !important;
                font-weight: bold;
                text-transform: uppercase;
                padding: 10px 20px;
                transition: color 0.3s, background-color 0.3s;
            }

                nav .navbar-nav .nav-item .nav-link:hover {
                    color: white !important;
                    background-color: #e55500;
                    text-decoration: none;
                    border-radius: 5px;
                }

            nav .navbar-brand {
                font-size: 1.8rem;
                color: #ff6600 !important;
                font-weight: bold;
            }

            nav .navbar-toggler {
                border-color: #ff6600;
            }

            nav .navbar-toggler-icon {
                background-color: #ff6600;
            }

        footer {
            background-color: #2c2f33;
            color: #f4f4f4;
            padding: 20px 0;
        }

            footer a {
                color: #ff6600;
            }

                footer a:hover {
                    color: #e55500;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">FitnessCenter</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FitnessCenter - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
 
   </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
